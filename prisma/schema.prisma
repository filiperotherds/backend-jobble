generator client {
  provider = "prisma-client"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String        @id @default(uuid())
  name              String
  email             String        @unique
  password          String
  avatarUrl         String?       @map("avatar_url")
  createdAt         DateTime      @default(now()) @map("created_at")
  updatedAt         DateTime      @updatedAt @map("updated_at")
  invites           Invite[]
  member            Member?
  organizationOwner Organization?
  tokens            Token[]
  userProfile       UserProfile?

  @@map("user")
}

model UserProfile {
  id        String    @id @default(uuid())
  userId    String    @unique @map("user_id")
  addresses Address[]
  projects  Project[]
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_profile")
}

model Token {
  id        String    @id @default(uuid())
  type      TokenType
  createdAt DateTime  @default(now()) @map("created_at")
  userId    String    @map("user_id")
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tokens")
}

model Invite {
  id             String       @id @default(uuid())
  email          String
  role           Role
  createdAt      DateTime     @default(now()) @map("created_at")
  authorId       String?      @map("author_id")
  organizationId String
  author         User?        @relation(fields: [authorId], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id])

  @@unique([email, organizationId])
  @@index([email])
  @@map("invite")
}

model Member {
  id             String       @id @default(uuid())
  role           Role         @default(MEMBER)
  userId         String       @unique @map("user_id")
  organizationId String       @map("organization_id")
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([organizationId], map: "idx_member_organization_id")
  @@map("member")
}

model Organization {
  id                        String   @id @default(uuid())
  name                      String?
  domain                    String?  @unique
  shouldAttachUsersByDomain Boolean  @default(false) @map("should_attach_users_by_domain")
  avatarUrl                 String?  @map("avatar_url")
  createdAt                 DateTime @default(now()) @map("created_at")
  updatedAt                 DateTime @updatedAt @map("updated_at")
  cpfCnpj                   String?  @unique @map("cpf_cnpj")
  email                     String?  @unique

  ownerId String @unique @map("owner_id")
  owner   User   @relation(fields: [ownerId], references: [id])

  address   Address[]
  invites   Invite[]
  members   Member[]
  estimates Estimate[]
  customers Customer[]
  products  Product[]

  @@index(id)
  @@map("organization")
}

model Address {
  id             String        @id @default(uuid())
  street         String
  city           String
  state          String
  zipCode        String        @map("zip_code")
  country        String
  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @updatedAt @map("updated_at")
  number         String
  userProfileId  String?       @map("user_profile_id")
  organizationId String?       @map("organization_id")
  organization   Organization? @relation(fields: [organizationId], references: [id])
  userProfile    UserProfile?  @relation(fields: [userProfileId], references: [id])

  @@map("address")
}

model Service {
  id          String    @id @default(uuid())
  name        String
  description String?
  slug        String    @unique
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  project     Project[]

  @@map("service")
}

model Project {
  id            String       @id @default(uuid())
  description   String?
  photoUrls     String[]     @map("photo_urls")
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")
  serviceId     String       @map("service_id")
  userProfileId String?      @map("user_profile_id")
  service       Service      @relation(fields: [serviceId], references: [id])
  userProfile   UserProfile? @relation(fields: [userProfileId], references: [id])

  @@map("project")
}

model Estimate {
  id          String         @id @default(uuid())
  estimateNo  Int            @map("estimate_no")
  description String?
  status      EstimateStatus @default(PENDING)
  createdAt   DateTime       @default(now()) @map("created_at")
  validity    DateTime?

  deliveryDeadline String?       @map("delivery_deadline")
  warrantyTerms    String?       @map("warranty_terms")
  paymentMethod    PaymentMethod @default(CASH) @map("payment_method")
  installments     Int           @default(1)
  downPayment      Decimal?      @map("down_payment") @db.Decimal(10, 2)

  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?
  customer       Customer?     @relation(fields: [customerId], references: [id])
  customerId     String?

  items EstimateItem[]

  @@unique([organizationId, estimateNo])
  @@map("estimate")
}

model Customer {
  id      String       @id @default(uuid())
  name    String?
  address String?
  phone   String?
  email   String?
  cpfCnpj String?
  type    CustomerType

  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?

  estimates Estimate[]

  @@index([phone, email])
}

model EstimateItem {
  id String @id @default(uuid())

  description String
  quantity    Int
  unitValue   Decimal @map("unit_value") @db.Decimal(10, 2)

  estimate   Estimate @relation(fields: [estimateId], references: [id], onDelete: Cascade)
  estimateId String   @map("estimate_id")

  product   Product? @relation(fields: [productId], references: [id])
  productId String?  @map("product_id")

  @@map("estimate_item")
}

model Product {
  id          String  @id @default(uuid())
  name        String
  description String?
  price       Decimal @default(0) @db.Decimal(10, 2)
  active      Boolean @default(true)

  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?

  estimateItems EstimateItem[]

  @@map("product")
}

enum PaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  BOLETO
  CASH
  PIX
  TRANSFER
}

enum CustomerType {
  PF
  PJ
}

enum TokenType {
  PASSWORD_RECOVER
}

enum EstimateStatus {
  PENDING
  APPROVED
  REJECTED
}

enum Role {
  ADMIN
  MEMBER
}
